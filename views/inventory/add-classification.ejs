<% if (title) { %>
  <h1><%= title %></h1>
<% } else {res.redirect('/')} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post">
  <fieldset>
    <legend>Add Classification</legend>
    <label for="classificationName">Classification Name:</label>
    <input type="text" id="classificationName" name="classification_name" 
           value="<%= locals.classification_name %>" required
           pattern="^[a-zA-Z0-9]+$" 
           title="Classification name cannot contain spaces or special characters">
    <p><strong>Note:</strong> The classification name cannot contain spaces or special characters.</p>
    
    <input type="submit" value="Add Classification">
  </fieldset>
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('form');
  const nameInput = document.getElementById('classificationName');
  
  form.addEventListener('submit', function(e) {
    const name = nameInput.value.trim();
    
    if (!name) {
      e.preventDefault();
      alert('Classification name is required.');
      return;
    }
    
    if (!/^[a-zA-Z0-9]+$/.test(name)) {
      e.preventDefault();
      alert('Classification name cannot contain spaces or special characters.');
      return;
    }
  });
});
</script>